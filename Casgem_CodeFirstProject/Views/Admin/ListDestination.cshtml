@model List<Casgem_CodeFirstProject.Dal.Entities.Destination>

@{
    ViewBag.Title = "ListDestination";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h3>Tur Listesi</h3>
<hr />

<a href="/Admin/AddDestination/" class="btn btn-success">Ekle</a>
<br />
<br />

<table class="table table-striped">

    <tr>
        <th>#</th>
        <th>Fotoğraf</th>
        <th>Tur Adı</th>
        <th>Tur Süresi</th>
        <th>Kişi Sayısı</th>
        <th>Fiyat</th>
        <th>Açıklama</th>
        <th></th>
        <th></th>
    </tr>

    @{ int a = 1;}
    @foreach (var i in Model)
    {
        <tr>
            <th>@a</th>
            <td>
                <img src="@i.ImageUrl" width="100" />
            </td>
            <td>@i.DestinationName</td>
            <td>@i.DayNight Gün</td>
            <td>@i.Capacity</td>
            <td>@i.Price ₺</td>
            <td>@i.Desription</td>
            <td>
                <a href="/Admin/DeleteDestination/@i.DestinationId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Admin/EditDestination/@i.DestinationId" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>

        a++;

    }
</table>

